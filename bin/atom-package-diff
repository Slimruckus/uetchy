#!/usr/bin/env node

var apd = require('../lib/atom-package-diff');
var program = require('commander');

program
  .version('0.1.0')
  .description('apd')

program
  .command('status')
  .action(apd.cmdStatus);

program
  .command('sync')
  .action(apd.cmdSync);

if (!process.argv.slice(2).length) {
  program.outputHelp();
}

program.parse(process.argv);
